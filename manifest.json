{
    "manifest_version": 2,
    "name": "Screenshot Extension",
    "version": "1.0",
    "permissions": [
      "tabs",
      "activeTab",
      "storage"
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  